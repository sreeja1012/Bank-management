void deposit ()
{
printf ("\n Enter the amount you want to deposit");
scanf("%d",& Amount);
Total Amount+=Amount;
}
void withdraw()
{
printf ("\n Enter the Amount you wish to withdraw");
scanf("%d",&Amo);
if(Amo<=Total Amount)
Total Amount-=Amo;
else
printf ("\n Less amount Withdraw is not possible");
}
void transfer ()
{
printf ("\n Enter the amount you want to transfer");
scanf("%d",&Tr);
if(Tr<=Total Amount)
Total Amount-=Tr;
else
printf ("\n Less amount Transfer is not possible");
}
void Check detail ()
{
printf ("\n Total Amount %d",Total Amount);
